(use-package php-mode
  :straight t
  :hook (php-mode . (lambda ()
                      (setq-local company-backends '(company-phpactor company-files))
                      ))
  :mode "\\.php\\'"
    )
(use-package company
  :straight t  ; :ensure t より straight 環境ならこちらがベター
  :init
  (global-company-mode)
  :config
  (setq company-idle-delay 0.2
        company-minimum-prefix-length 2
        company-selection-wrap-around t)

  ;; yasnippet を全ての backend に統合する関数
  (defun my/company-backend-with-yasnippet (backend)
    (if (and (listp backend) (member 'company-yasnippet backend))
        backend
      (append (if (consp backend) backend (list backend))
              '(:with company-yasnippet))))

  ;; 既存の backends に適用
  (setq company-backends (mapcar #'my/company-backend-with-yasnippet company-backends)))
(use-package phpactor
  :ensure t
  :config
  (add-hook 'php-mode-hook
            (lambda ()
              (make-local-variable 'completion-at-point-functions)
              (add-to-list 'completion-at-point-functions #'phpactor-complete-at-point))))
(use-package company-phpactor :ensure t)
